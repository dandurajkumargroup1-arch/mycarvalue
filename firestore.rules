
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // isSuperAdmin does not require a DB read and is faster.
      let isSuperAdmin = isSignedIn() && request.auth.token.email == 'rajmycarvalue@gmail.com';
      // isRoleAdmin requires a DB read. The rule allowing this read must be solid.
      let isRoleAdmin = isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
      return isSuperAdmin || isRoleAdmin;
    }

    // ------------------------------------------------------------------------
    // User Rules
    // ------------------------------------------------------------------------
    match /users/{userId} {
      // ANY signed-in user can get/list user profiles to support isAdmin() checks.
      // An Admin can update or delete any user.
      // A non-admin can only update their own profile.
      allow get, list: if isSignedIn();
      allow update: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow delete: if isAdmin(); // ONLY admins can delete users.

      // --- Subcollection Rules ---

      match /carValuations/{carValuationId} {
        // Admins can manage any valuation. Users can manage their own.
        allow get, list, delete, create: if isOwner(userId) || isAdmin();
        // Valuations are immutable.
        allow update: if false;
      }

      match /wallet/{walletId} {
        // Admins can manage any wallet. Users can manage their own.
        allow get, list, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // ------------------------------------------------------------------------
    // Withdrawal Request Rules
    // ------------------------------------------------------------------------
    match /withdrawalRequests/{requestId} {
      // A user can create their own request.
      allow create: if isOwner(request.resource.data.userId);
      // A user can read their own request. An admin can read any.
      allow get: if isOwner(resource.data.userId) || isAdmin();
      // An admin can list all requests. A user can only list their own.
      allow list: if isAdmin() || (isSignedIn() && request.query.where.userId == request.auth.uid);
      // Only Admins can update (approve/reject) or delete requests.
      allow update, delete: if isAdmin();
    }
  }
}
