
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function userProfileHasCorrectIdOnCreate(userId) {
      return request.resource.data.id == userId;
    }

    function hasCorrectOwnerDataOnCreate(userId) {
      return request.resource.data.userId == userId;
    }

    function isAdmin() {
      // isSuperAdmin does not require a DB read and is faster.
      let isSuperAdmin = isSignedIn() && request.auth.token.email == 'rajmycarvalue@gmail.com';
      // isRoleAdmin requires a DB read. The `allow get` rule on /users/{userId} must permit this check.
      let isRoleAdmin = isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
      return isSuperAdmin || isRoleAdmin;
    }

    // ------------------------------------------------------------------------
    // User Rules
    // ------------------------------------------------------------------------
    match /users/{userId} {
      // An Admin can get/list/update/delete any user.
      // A non-admin can only get/update their own profile. They cannot list all users.
      allow get, update: if isOwner(userId) || isAdmin();
      allow list, delete: if isAdmin();
      allow create: if (isOwner(userId) && userProfileHasCorrectIdOnCreate(userId)) || isAdmin();

      // --- Subcollection Rules ---

      match /carValuations/{carValuationId} {
        // Admins can manage any valuation. Users can manage their own.
        allow get, list, delete: if isOwner(userId) || isAdmin();
        allow create: if (isOwner(userId) && hasCorrectOwnerDataOnCreate(userId)) || isAdmin();
        // Valuations are immutable to maintain data integrity.
        allow update: if false;
      }

      match /wallet/{walletId} {
        // Admins can manage any wallet. Users can manage their own.
        allow get, list, write: if isOwner(userId) || isAdmin();
      }

      match /withdrawalRequests/{requestId} {
        // A user can create and read their own requests.
        allow create, list, get: if isOwner(userId);
        // A user cannot update or delete their request once it's submitted. Only admins can.
        allow update, delete: if false;
      }
    }
    
    // ------------------------------------------------------------------------
    // Collection Group Rules for Admin Access
    // ------------------------------------------------------------------------
    match /{path=**}/withdrawalRequests/{requestId} {
      // Admins can read, update (approve/reject), and delete any request from any user.
      allow read, update, delete: if isAdmin();
    }
  }
}

    