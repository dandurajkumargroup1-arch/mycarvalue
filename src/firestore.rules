/**
 * @fileoverview Firestore Security Rules for the AutoValue Application
 * @author Firebase Creator
 *
 * @description
 * This ruleset enforces a strict user-ownership security model, with a global
 * override for administrators. A user with the 'Admin' role or the super-admin
 * email has full read/write access to all data for management purposes. All
 * other users are restricted to their own data tree.
 *
 * @philosophy
 * Core Philosophy: A two-tiered permission model.
 * 1. Admin Override: Explicit checks for `isAdmin()` are included in each rule
 *    to grant administrators comprehensive access.
 * 2. User Isolation: A user-centric, path-based ownership model for non-admins.
 *    If a non-admin's UID matches the `{userId}` in the path, they are granted
 *    access; otherwise, access is denied.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function userProfileHasCorrectIdOnCreate(userId) {
      return request.resource.data.id == userId;
    }

    function userIdIsImmutableOnUpdate() {
        return request.resource.data.id == resource.data.id;
    }

    function hasCorrectOwnerDataOnCreate(userId) {
      return request.resource.data.userId == userId;
    }
    
    function isAdmin() {
      // Check if user has 'Admin' role in their profile
      let isRoleAdmin = isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
      // Check for the permanent super-admin email
      let isSuperAdmin = isSignedIn() && request.auth.token.email == 'rajmycarvalue@gmail.com';
      
      return isRoleAdmin || isSuperAdmin;
    }
    
    // ------------------------------------------------------------------------
    // User Rules
    // ------------------------------------------------------------------------
    match /users/{userId} {
      // Admins have full access. Non-admins can get/update/delete their own profile.
      allow read, update, delete: if isOwner(userId) || isAdmin();
      
      // New users can create their own profile.
      allow create: if isOwner(userId) && userProfileHasCorrectIdOnCreate(userId);

      match /carValuations/{carValuationId} {
        // Admins have full access. Non-admins can read/create/delete their own.
        allow read, create, delete: if isOwner(userId) || isAdmin();
        // Valuations are immutable once created.
        allow update: if false;
      }

      match /wallet/{walletId} {
        // Admins have full access. Non-admins can access their own wallet.
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
    
    // ------------------------------------------------------------------------
    // Withdrawal Request Rules
    // ------------------------------------------------------------------------
    match /withdrawalRequests/{requestId} {
      // A user can create their own request. Admins can create too.
      allow create: if isOwner(request.resource.data.userId) || isAdmin();
      
      // A user can read their own request. Admins can read any.
      allow read: if isOwner(resource.data.userId) || isAdmin();
      
      // A user can only list their own requests. Admins can list all.
      allow list: if (isSignedIn() && request.query.where.userId == request.auth.uid) || isAdmin();
      
      // Only Admins can update (approve/reject) or delete requests.
      allow update, delete: if isAdmin();
    }
  }
}
